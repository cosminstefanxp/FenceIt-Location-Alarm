<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextBody">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff0000</item>
        <item name="android:background">@null</item>
    </style>

    <style name="NumberPickerInputText" parent="@android:style/TextAppearance.Large.Inverse">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="NumberPickerUpButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/numberpicker_up_btn</item>
        <item name="android:paddingTop">22dip</item>
        <item name="android:paddingBottom">22dip</item>
    </style>

    <style name="NumberPickerDownButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/numberpicker_down_btn</item>
        <item name="android:paddingTop">22dip</item>
        <item name="android:paddingBottom">22dip</item>
    </style>

    <style name="NumberPickerInputText" parent="@android:style/Widget.EditText">
        <item name="android:textAppearance">@style/NumberPickerInputText</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/numberpicker_input</item>
    </style>

</resources>