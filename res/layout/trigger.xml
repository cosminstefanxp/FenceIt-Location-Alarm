<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BasicActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/trigger.saveButton"
        style="@style/TitleBarAction.Text"
        android:text="@string/button_save" />

    <!-- Trigger Type Section -->

    <LinearLayout
        android:id="@+id/trigger.whenSection"
        style="@style/SettingItem"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trigger.whenSectionTitle"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/trigger.whenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entering Fence"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <!-- Location Section -->

    <TextView
        android:id="@+id/textView1"
        style="@style/SectionHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:padding="5dp"
        android:text="Location"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RelativeLayout
        android:id="@+id/trigger.locationSection"
        style="@style/SettingItem"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/trigger.locationTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Location Title"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/trigger.locationTypeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/trigger.locationTitleText"
            android:src="@android:drawable/ic_menu_compass" />

        <TextView
            android:id="@+id/trigger.locationTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trigger.locationTitleText"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/trigger.locationTypeImage"
            android:text="Type Description"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/trigger.locationDescText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/trigger.locationTypeText"
            android:layout_below="@+id/trigger.locationTypeText"
            android:text="Location Description"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/trigger.locationAddSection"
        style="@style/SettingItem.Indented"
        android:layout_width="fill_parent"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/trigger.locationAddIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_titlebar_add" />

        <TextView
            android:id="@+id/trigger.locationAddText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/trigger.locationAddIcon"
            android:text="Replace with a new location" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/trigger.locationFavoriteSection"
        style="@style/SettingItem.Indented"
        android:layout_width="fill_parent"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/trigger.locationFavoriteIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/trigger.locationFavoriteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/trigger.locationFavoriteIcon"
            android:text="Replace with a favorite location" />
    </RelativeLayout>

</LinearLayout>