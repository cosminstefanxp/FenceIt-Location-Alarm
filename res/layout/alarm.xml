<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BasicActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/alarm.saveButton"
        style="@style/TitleBarAction.Text"
        android:text="@string/button_save" />

    <LinearLayout
        android:id="@+id/alarm.nameSection"
        style="@style/SettingItem"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/alarm.nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm name"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to set the name of this alarm."
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/alarm.enabledSection"
        style="@style/SettingItem"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/alarm.enabledText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm enabled"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to change the status of this alarm."
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <RelativeLayout
        style="@style/SectionHeaderSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true" >

        <ImageButton
            android:id="@+id/alarm.addTriggerButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Add a new Trigger"
            android:src="@android:drawable/ic_menu_add" />

        <TextView
            android:id="@+id/alarm.triggersText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Triggers"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/alarm.noTrigggersText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="3dp"
            android:text="No triggers yet."
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ListView
            android:id="@+id/alarm.triggersListView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:cacheColorHint="#00000000"
            android:padding="1dp"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical" >

            <!-- Preview: listitem=@layout/alarm_trigger_list -->
        </ListView>
    </FrameLayout>

    <RelativeLayout
        style="@style/SectionHeaderSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true" >

        <ImageButton
            android:id="@+id/alarm.addActionButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Add a new Action"
            android:src="@android:drawable/ic_menu_add" />

        <TextView
            android:id="@+id/alarm.actionsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Actions"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/alarm.noActionsText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="3dp"
            android:text="No actions yet."
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ListView
            android:id="@+id/alarm.actionsListView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:cacheColorHint="#00000000"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical" >
        </ListView>
    </FrameLayout>

</LinearLayout>