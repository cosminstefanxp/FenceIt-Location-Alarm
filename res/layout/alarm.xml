<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="5dp" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp" >

        <TextView 
            android:id="@+id/alarm.nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Name:" />

        <EditText
            android:id="@+id/alarm.nameTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/alarm.enabledCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Enabled" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:background="@color/delimiter"
        android:gravity="bottom"
        android:paddingBottom="2dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="@color/background"
            android:baselineAligned="true"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/alarm.triggersText"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/background"
                android:padding="4dp"
                android:text="Triggers"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageButton
                android:id="@+id/alarm.addTriggerButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="Add a new Trigger"
                android:src="@android:drawable/ic_menu_add" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/delimiter"
        android:paddingBottom="2dp" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="@color/background" >

            <TextView
                android:id="@+id/alarm.noTrigggersText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:text="No triggers yet."
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ListView
                android:id="@+id/alarm.triggersListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/background"
                android:padding="1dp" >
            </ListView>
        </FrameLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:background="@color/delimiter"
        android:layout_marginTop="10dp"
        android:gravity="bottom"
        android:paddingBottom="2dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="@color/background"
            android:baselineAligned="true"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/alarm.actionsText"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/background"
                android:padding="4dp"
                android:text="Actions"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageButton
                android:id="@+id/alarm.addActionButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="Add a new Action"
                android:src="@android:drawable/ic_menu_add" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/delimiter"
        android:paddingBottom="2dp" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="@color/background" >

            <TextView
                android:id="@+id/alarm.noActionsText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:text="No actions yet."
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ListView
                android:id="@+id/alarm.actionsListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/background"
                android:padding="1dp" >
            </ListView>
        </FrameLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:paddingTop="10dp" >

        <Button
            android:id="@+id/alarm.saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_span="2"
            android:layout_weight="1"
            android:text="Save" />
    </TableRow>

</TableLayout>