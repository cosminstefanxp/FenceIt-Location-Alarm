<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/SectionHeaderSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true" >

        <ImageButton
            android:id="@+id/triggerPanel.addTriggerButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/trigger_add"
            android:src="@drawable/ic_new" />

        <TextView
            style="@style/SectionHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/triggers"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <TextView
        android:id="@+id/triggerPanel.noTrigggersText"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="6dp"
        android:text="No triggers yet."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="gone" />

    <ListView
        android:id="@+id/triggerPanel.triggersListView"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:padding="1dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:minHeight="120dp"
        tools:listitem="@layout/trigger_panel_fragment_list" >
    </ListView>

</LinearLayout>