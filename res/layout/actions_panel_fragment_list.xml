<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_size"
    android:paddingBottom="10dp" >

    <ImageView
        android:id="@+id/actionsPanel.actionsListTypeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_alignBottom="@+id/actionsPanel.actionsListSecDesc"
        android:layout_alignTop="@+id/actionsPanel.actionsListMainDesc"
        android:padding="7dp"
        android:gravity="center"
        android:src="@android:drawable/ic_menu_view" />

    <TextView
        android:id="@+id/actionsPanel.actionsListMainDesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/actionsPanel.actionsListTypeImage"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/default_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/actionsPanel.actionsListSecDesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/actionsPanel.actionsListMainDesc"
        android:layout_below="@+id/actionsPanel.actionsListMainDesc"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/default_text"
        android:paddingRight="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>