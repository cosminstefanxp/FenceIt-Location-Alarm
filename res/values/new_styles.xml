<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SettingItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/bottom_border</item>
    </style>

    <style name="SettingItemDescription">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="EditTextStyle.Light" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="EditTextStyle.Dark" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_dark</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ToggleStyle.Light" parent="android:Widget.Button.Toggle">
        <item name="android:background">@drawable/btn_toggle_holo_light</item>
        <item name="android:minHeight">48dip</item>
    </style>

    <style name="ToggleStyle.Dark" parent="android:Widget.Button.Toggle">
        <item name="android:background">@drawable/btn_toggle_holo_dark</item>
        <item name="android:minHeight">48dip</item>
    </style>

    <style name="SpinnerStyle.Light" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/list_selector_holo_light</item>
    </style>

    <style name="SpinnerStyle.Light.Dropdown">
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="SpinnerDropDownItemStyle.Light" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/btn_radio_holo_light</item>
    </style>

    <style name="TextViewSelectorStyle">
        <item name="android:background">@drawable/spinner_background_holo_light</item>
    </style>
</resources>